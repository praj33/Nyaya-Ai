          "cost_band": "Medium",
          "effort_intensity": "Medium to High",
          "case_difficulty": 3
        },
        "risk_flags": {
          "high_risk_case": false,
          "evidence_sensitivity": "High",
          "failure_risks": [
            "Insufficient or inadmissible evidence",
            "Procedural violations during investigation",
            "Missing expert or forensic reports",
            "Incorrect offence classification"
          ]
        }
